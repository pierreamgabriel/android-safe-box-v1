<Page navigatingTo="onNavigatingTo" xmlns:actionBar="/actionBar">
    <ActionBar class="actionbar" title="Add a document">
  <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack"></NavigationButton>
</ActionBar>
<StackLayout class="login-wrapper">
    <TextField text="{{docType}}" hint="Type (ID Card, Social Security, etc.)" />
    <TextField text="{{docNumber}}" hint="Document number" />
    <TextField text="{{docIssue}}" hint="Issue date" />
    <TextField text="{{docExpiration}}" hint="Expiration date" />
    <TextField text="{{docOther}}" hint="Other info" />
    <Button class="btn btn-outline btn-rounded-sm" text="Save" tap="{{documents}}" />
    <Label row="2" col="0" text="Go Back" class="go-back" textWrap="true" tap="goBack" /> 
    </StackLayout>
</Page>

