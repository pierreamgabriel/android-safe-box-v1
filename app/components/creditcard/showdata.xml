<Page navigatingTo="onNavigatingTo" xmlns:actionBar="/actionBar">
    <ActionBar class="actionbar" title="View, edit or delete">
  <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack"></NavigationButton>
</ActionBar>
<StackLayout class="login-wrapper">
    <TextField text="{{brand2}}" hint="Brand" />
    <TextField text="{{number2}}" hint="Number" />
    <TextField text="{{verification2}}" hint="Verification code" />
    <TextField text="{{expiration2}}" hint="Expiration date" />
    <TextField text="{{password2}}" hint="Password" />
    <Button class="btn btn-outline btn-rounded-sm"  rowId="{{rowId2}}" brand="{{brand2}}" number="{{number2}}" verification="{{verification2}}" expiration="{{expiration2}}" password="{{password2}}" text="Save changes" tap="editData" />
    <Button class="btn btn-outline btn-rounded-sm" rowId="{{rowId2}}"  text="Delete data" tap="deleteData" />
    </StackLayout>
</Page>