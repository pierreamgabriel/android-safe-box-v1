<Page navigatingTo="onNavigatingTo" xmlns:actionBar="/actionBar">
    <ActionBar class="actionbar" title="Add a credit card">
  <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack"></NavigationButton>
</ActionBar>
<StackLayout class="login-wrapper">
    <TextField text="{{ccBrand}}" hint="Brand" />
    <TextField text="{{ccNumber}}" hint="Number" />
    <TextField text="{{ccVerification}}" hint="Verification code" />
    <TextField text="{{ccEpiration}}" hint="Expiration date" />
    <TextField text="{{ccPass}}" hint="Password" />
    <Button class="btn btn-outline btn-rounded-sm" text="Save" tap="{{creditCard}}" />
    <Label row="2" col="0" text="Go Back" class="go-back" textWrap="true" tap="goBack" /> 
    </StackLayout>
</Page>
